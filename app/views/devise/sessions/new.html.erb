<div class="container">
    <div class="card mx-auto" style="width: 400px; margin: 50px;">
      <div class="card-header text-center">
        <h2>Se connecter</h2>
      </div>
      <div class="card-body">
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
           <div class="field">
             <%= f.label :email, class: "form-label text-align-left" %><br />
             <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
           </div>
           <div class="field">
             <%= f.label :mot_de_passe, class: "form-label" %><br />
             <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
           </div>
           <% if devise_mapping.rememberable? %>
              <div class="field">
               <%= f.check_box :remember_me %>
               <%= f.label :rester_connectÃ© %>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit "Se connecter", class: "btn btn-primary mt-3 mb-3" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
